FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform 0.1;

boundaryField
{
    left
    {
        type            fixedValue;
        value           $internalField;
    }
    right
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }
   
    top
    {
        type            inletOutlet;
        inletValue      uniform 0.1;
        value           uniform 0.1;
   
    }
    bottom
    {
        type            fixedValue;
        value           $internalField;
  
    }
    emptyFaces
    {
        type            empty;
    }
}


// ************************************************************************* //
