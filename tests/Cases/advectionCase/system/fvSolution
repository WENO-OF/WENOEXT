FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    ".*"
    {
        solver      smoothSolver;
        smoother    symGaussSeidel;
        tolerance   1e-10;
        relTol      0;
        maxIter     10000;
        minIter     1;
    }
}

